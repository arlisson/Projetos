.data
	msg_1: .asciz "Informe um número: "
	
.text
.global main
main:
	li s3 1	
	
	li a7 4
	la a0 msg_1
	ecall
	
	li a7 5
	ecall
	mv t0 a0
	
	beqz t0 n_p
	beq t0 s3 p	
	
	andi t1 t0 -1
	and t1 t0 t1
	
	beqz t1 n_p	
	
	j p

n_p:
	li a7 1
	mv a0 s4
	ecall
	
	li s2 0	
	j sair

p:
	li a7 1
	mv a0 s3
	ecall
	
	li s2 1		
	j sair

sair:
	li a7 10
	ecall
