.data
	msg_1: .asciz "Informe a direção:\n0-Norte\n1-Sul\n2-Leste\n3-Oeste\n"	
	norte: .asciz "Mover para o Norte"
	sul: .asciz "Mover para o Sul"
	leste: .asciz "Mover para o Leste"
	oeste: .asciz "Mover para o Oeste"
	
.text
.global main
main:

	li s2 0
	li s3 1
	li s4 2
	li s5 3

	li a7 4
	la a0 msg_1
	ecall
	
	li a7 5
	ecall
	mv t0 a0
	
	beq t0 s2 n
	beq t0 s3 s
	beq t0 s4 l
	beq t0 s5 o
		
	j sair
	
n:
	
	li a7 4
	la a0 norte
	ecall
	j sair

s:
	
	li a7 4
	la a0 sul
	ecall
	j sair

l:
	
	li a7 4
	la a0 leste
	ecall
	j sair

o:
	
	li a7 4
	la a0 oeste
	ecall
	j sair
	
sair:
	li a7 10	
	ecall
	